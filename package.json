{
  "name": "pxt-blockly",
  "version": "2.1.6",
  "description": "Blockly fork for Microsoft MakeCode",
  "author": "Microsoft",
  "license": "MIT",
  "homepage": "https://github.com/Microsoft/pxt-blockly#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/pxt-blockly.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/pxt-blockly/issues"
  },
  "keywords": [
    "blockly",
    "pxt"
  ],
  "scripts": {
    "build": "npm run prepare",
    "deploy": "gh-pages -t -d gh-pages -e $(git branch | grep \\* | cut -d ' ' -f2) -m \"Build for $(git log --pretty=format:%H -n1)\"",
    "prepare": "node_modules/.bin/gulp build && webpack",
    "lint": "eslint .",
    "pretest": "tests/scripts/test_setup.sh",
    "test": "node tests/jsunit/run_jsunit_tests_in_browser.js",
    "watch": "node_modules/.bin/gulp watch",
    "publish": "node_modules/.bin/gulp publish"
  },
  "files": [
    "README.md",
    "blockly_compressed.js",
    "blocks_compressed.js",
    "media/**",
    "msg/**"
  ],
  "browser": {
    "./node.js": "./browser.js",
    "./core.js": "./core-browser.js",
    "./blockly-node.js": "./blockly.js"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "copy-webpack-plugin": "4.5.1",
    "eslint": "^5.13.0",
    "gh-pages": "2.0.1",
    "google-closure-compiler": "^20190618.0.0",
    "google-closure-library": "^20190618.0.0",
    "graceful-fs": "4.1.11",
    "gulp": "^4.0.2",
    "gulp-bump": "^2.7.0",
    "gulp-concat": "^2.6.1",
    "gulp-git": "^2.9.0",
    "gulp-insert": "^0.5.0",
    "gulp-series": "^1.0.2",
    "gulp-shell": "^0.7.1",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-umd": "^2.0.0",
    "jshint": "^2.10.2",
    "mocha": "^6.1.4",
    "semver": "^6.0.0",
    "webdriverio": "^5.11.5",
    "rimraf": "^2.6.3",
    "travis-after-all": "1.4.4",
    "typescript-closure-tools": "^0.0.7",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.1"
  },
  "jshintConfig": {
    "globalstrict": true,
    "predef": [
      "Blockly",
      "goog",
      "window",
      "document",
      "soy",
      "XMLHttpRequest"
    ],
    "sub": true,
    "undef": true,
    "unused": true
  },
  "dependencies": {
    "jsdom": "^15.1.1",
    "exports-loader": "0.6.3",
    "imports-loader": "0.6.5"
  }
}
