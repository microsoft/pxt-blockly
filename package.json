{
  "name": "pxt-blockly",
  "version": "2.0.1",
  "description": "Blockly fork for Microsoft MakeCode",
  "author": "Microsoft",
  "license": "MIT",
  "homepage": "https://github.com/Microsoft/pxt-blockly#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/pxt-blockly.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/pxt-blockly/issues"
  },
  "keywords": [
    "blockly",
    "pxt"
  ],
  "scripts": {
    "deploy": "gh-pages -t -d gh-pages -m \"Build for $(git log --pretty=format:%H -n1)\"",
    "prepare": "node_modules/.bin/gulp build && webpack",
    "lint": "eslint .",
    "pretest": "tests/scripts/test_setup.sh",
    "test": "node tests/jsunit/test_runner.js",
    "watch": "node_modules/.bin/gulp watch",
    "publish": "node_modules/.bin/gulp release"
  },
  "files": [
    "README.md",
    "blockly_compressed.js",
    "blocks_compressed.js",
    "media/**",
    "msg/**"
  ],
  "devDependencies": {
    "async": "2.6.0",
    "copy-webpack-plugin": "4.5.1",
    "eslint": "^5.7.0",
    "event-stream": "3.3.4",
    "gh-pages": "0.12.0",
    "glob": "7.1.2",
    "google-closure-compiler": "^20180805.0.0",
    "google-closure-library": "^20180805.0.0",
    "graceful-fs": "4.1.11",
    "gulp": "^3.9.1",
    "gulp-bump": "^2.7.0",
    "jshint": "^2.9.5",
    "json": "9.0.4",
    "merge-stream": "^1.0.0",
    "rimraf": "2.6.2",
    "travis-after-all": "1.4.4",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webdriverio": "^4.13.2",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.1"
  },
  "jshintConfig": {
    "globalstrict": true,
    "predef": [
      "Blockly",
      "goog",
      "window",
      "document",
      "soy",
      "XMLHttpRequest"
    ],
    "sub": true,
    "undef": true,
    "unused": true
  },
  "dependencies": {
    "jsdom": "^12.0.0",
    "exports-loader": "0.6.3",
    "imports-loader": "0.6.5"
  }
}
